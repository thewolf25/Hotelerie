{% extends "@Chambre/Layout/layout.html.twig" %}

{% block stylesheet %}

{% endblock %}

{% block title %} {{ parent() }} - list des chambres {% endblock %}
{% block body %}

    <a href="{{ path('add_chambre') }}" class="btn btn-warning"> add Chambre</a>
    <table class="table">

    <thead class="thead-dark">
    <tr>
        <th scope="col">id</th>
        <th scope="col">NumChambre</th>
        <th scope="col">Nombre de list</th>
        <th scope="col">categorie</th>
        <th scope="col">Description</th>
        <th scope="col">images</th>
    </tr>
    </thead>
    <tbody>

    {% for chambre in chambres %}
        <tr>
            <td scope="row">{{ chambre.id }}</td>
            <td>{{ chambre.numChambre }}</td>
            <td>{{ chambre.nombreLit}}</td>
            <td>{{ chambre.category.libelle }}</td>
            <td>{{ chambre.description }}</td>
            <td>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

            {% for image in chambre.image %}
                {%  if image.id == 1 %}
                <div class="carousel-item active "><img class="d-block w-100" height="200px" width="300px" src="{{ asset('image/')}}{{image.imageUrl}}" ></div>
                {%  else %}
                    <div class="carousel-item "><img class="d-block w-100"  height="200px" width="300px" src="{{ asset('image/')}}{{image.imageUrl}}" ></div>
                {% endif %}
            {% endfor%}
                </div>

                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            </td>
            <td><td><a class="btn btn-dark" href="{{ path( "update_chambre",{'id' : chambre.id }) }}"> modifier</a> </td></td>
            <td><a class="btn btn-danger" href="{{ path( "supprimer_chambre",{'id' : chambre.id }) }}"> supprimer</a> </td>
            {#
            <td><a class="btn btn-danger" href="{{ path( "parc_supprimer_modele",{'id' : modele.id }) }}"> supprimer</a> </td>
            <td><a class="btn btn-warning" href="{{ path("parc_update_modele",{'id' : modele.id }) }}"> update </a> </td>
            #}

        </tr>
    {% endfor %}
    </tbody>

    </table>{% endblock %}